<%= form_for @match do |f| %>

	<div class="form-group">
	</br>
	    <select name="match[player_one_id]" id="">
	      <option value="">Player 1</option>
	           <% players = Player.all %>
	          <% players.each do |player| %>
	              <option value="<%= player.id %>"><%= player.name %></option>
	          <% end %>
	    </select>

		<div class="form-match">
			<input type="number"  value="0" name="match[player_one_score]"><br>
		</div>
	</div>

	<div class="form-group">
	    <select name="match[player_two_id]" id="">
	      <option value="">Player 2</option>
	           <% players = Player.all %>
	          <% players.each do |player| %>
	              <option value="<%= player.id %>"><%= player.name %></option>
	          <% end %>
	    </select>


		<div class="form-match">
			 <input type="number" value="0" name="match[player_two_score]"><br>
		</div>
	</div>

	<%= f.submit :Create, class: "btn btn-primary" %>
<% end %>

<% if @match.errors.any? %>
<div class="alert alert-danger">
  <%= @match.errors.messages if @match.errors.any? %>
</div>
<% end %>