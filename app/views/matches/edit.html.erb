
<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <h3>Edit Match:</h3>

      

      	<%= form_for @match do |f| %>

			<div class="form-group">Player:</div>
		    <select name="match[player_one_id]"  id="">
		      <option value="">Please select</option>
		           <% players = Player.all %>
		          <% players.each do |player| 
		          	%>

		              <option value="<%= player.id %>"><%= player.name %></option>
		          <% end %>
		    </select>

			<div class="form-match">
				Score:
				 <input type="text" name="match[player_one_score]"><br>
			</div>

			<div class="form-group">Player:</div>
		    <select name="match[player_two_id]" id="">
		      <option value="">Please select</option>
		           <% players = Player.all %>
		          <% players.each do |player| %>
		              <option value="<%= player.id %>"><%= player.name %></option>
		          <% end %>
		    </select>


			<div class="form-match">
				Score:
				 <input type="text" name="match[player_two_score]"><br>
			</div>

			<%= f.submit :Create, class: "btn btn-primary" %>
		<% end %>

		<% if @match.errors.any? %>
		<div class="alert alert-danger">
		  <%= @match.errors.messages if @match.errors.any? %>
		</div>
		<% end %>
    </div>
  </div>
</div>